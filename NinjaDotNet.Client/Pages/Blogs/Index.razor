@page "/blogs/"

@inject IBlogRepository _blogRepo
@inject NavigationManager _navMan

@if (Model == null)
{
    <Loading Text="Loading Blogs..." />
}
else if (Model.Count < 1)
{
<div>    <a class="btn btn-primary" href="/blogs/create">Create</a></div>
}
else
{
    <a class="btn btn-primary" href="/blogs/create">Create</a>
    <table class="table table-striped table-responsive">
        <thead>
            <tr>
                <th>Title</th>
                <th>Synopsis</th>
                <th>Created Date</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var blog in Model)
            {
                <tr>
                    <td>@blog.Title</td>
                    <td>@blog.Synposis</td>
                    <td>@blog.CreatedDate</td>
                    <td>
                        <a class="btn btn-primary" href="/blogs/view/@blog.BlogId">
                            <span class="oi oi-book"></span>
                        </a>
                        <a class="btn btn-warning" href="/blogs/edit/@blog.BlogId">
                            <span class="oi oi-pencil"></span>
                        </a>
                        <a class="btn btn-danger" href="/blogs/delete/@blog.BlogId">
                            <span class="oi oi-delete"></span>
                        </a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
}


@code
{
    private IList<BlogModel> Model;

    protected override async Task OnInitializedAsync()
    {
        Model = await _blogRepo.Get(Endpoints.BlogsEndpoint);
    }

}
